<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhiMath.Pages.Polynomials"
             Title="Polynomials">
    <AbsoluteLayout>
        <Entry x:Name="polynomials_entry"
               AbsoluteLayout.LayoutFlags="All"
               AbsoluteLayout.LayoutBounds="0.5, 0.05, 0.5, 0.2"
               VerticalOptions="Center"/>
        <Label x:Name="polynomials_output"
               AbsoluteLayout.LayoutFlags="All"
               AbsoluteLayout.LayoutBounds="0.5, 0.225, 1, 0.2"
               HorizontalTextAlignment="Center"
               FontSize="14"/>
        <Button Text="Simplify"
                AbsoluteLayout.LayoutFlags="All"
                AbsoluteLayout.LayoutBounds="0.5, 0.3, 0.5, 0.15"
                Clicked="Simplify_Clicked"/>
        <Button Text="Solve"
                AbsoluteLayout.LayoutFlags="All"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.5, 0.15"
                Clicked="Solve_Clicked"/>
    </AbsoluteLayout>
</ContentPage>