<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="PhiMath.Pages.Algebra">
	<ScrollView>
        <VerticalStackLayout Margin="20"
                             Spacing="10">
            <Border StrokeShape="RoundRectangle 10,10,10,10">
                <Editor x:Name="algebra_entry"
						FontSize="16"
                        AutoSize="TextChanges"
						TextChanged="InputTextChanged"/>
            </Border>
            <Label x:Name="algebra_output"
				   HorizontalTextAlignment="Center"
				   FontSize="14"/>
            <Grid RowDefinitions="*, *"
                  ColumnDefinitions="*, *, *"
                  RowSpacing="10"
                  ColumnSpacing="10"
                  HeightRequest="210">
                <Button Text="Factorize"
                        Grid.Row="0"
                        Grid.Column="0"
                        Clicked="Factor_Clicked"/>
                <Button Text="Square Root"
                        Grid.Row="1"
                        Grid.Column="0"
                        Clicked="Sqrt_Clicked"/>
                <Button Text="Normalize"
                        Grid.Row="0"
                        Grid.Column="1"
                        Clicked="Normalize_Clicked"/>
                <Button Text="Solve"
                        Grid.Row="1"
                        Grid.Column="1"
                        Clicked="Solve_Clicked"/>
                <Button Text="d/dx"
                        Grid.Row="0"
                        Grid.Column="2"
                        Clicked="Differentiate_Clicked"/>
                <Button Text="âˆ«dx"
                        Grid.Row="1"
                        Grid.Column="2"
                        Clicked="Integrate_Clicked"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>