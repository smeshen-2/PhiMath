<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PhiMath.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:PhiMath.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Algebra">
            <ShellContent
                Title="Factors"
                ContentTemplate="{DataTemplate pages:Factors}"/>
            <ShellContent
                Title="Polynomials"
                ContentTemplate="{DataTemplate pages:Polynomials}"/>
        </Tab>
        <Tab Title="Geometry">
            <ShellContent
                Title="Triangles?"
                ContentTemplate="{DataTemplate pages:Geometry}"/>
        </Tab>
    </TabBar>
</Shell>
